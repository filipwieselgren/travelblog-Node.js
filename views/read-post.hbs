<div class="loggedinlogocontainer">

  <a href="/"><img
      class="travelstories-logo-loggedin"
      src="/images/TravelStories-logga-ingen-slogan.png"
      alt="TravelStories logo"
    />
  </a>

  <a href="/logout"><button class="logoutbtn">Log out</button></a>
</div>

<div class="loggedinascontainer">
  <div class="usercontainer">
    <div class="traveltext">Traveler logged in </div>
    <div class="profillink">
      <a class="profillink" href="/profil/{{_id}}">
        {{fullName}}
        {{loginInfo}}</a>
    </div>
  </div>

  <button class="createpostbtn"><a href="/posts/new-post">Create post</a></button>
</div>
<div class="readcontainer">
  <div class="readpostcontainer">
    <div class="post-bild-container">
      <img class="post-bild" src="{{article.imgUrl}}" />
    </div>

    {{#if validAuthor}}
      <div class="editdeletebtn">
        <a class="editbtn" href="/posts/{{article._id}}/edit">Edit post âœŽ</a>
        <a class="deletebtn" href="/posts/{{article._id}}/delete">Delete story ðŸ—‘</a>
      </div>
    {{/if}}
    <div class="titlecontentcontainer">
      <h2>{{article.title}}</h2>
      <div>{{article.content}}</div>
    </div>
    {{#if article.likes}}
      <p class="likeheart"><i class="bi bi-heart"></i>
        {{article.likes.length}}</p>
    {{else}}
      <p class="likeheart"><i class="bi bi-heart"></i>
        0</p>
    {{/if}}

  </div>
</div>

<div class="readpostbtncontainer">
  <div class="readpostbtn">
    <a class="goback" href="/">Go back â†©ï¸Ž</a>
    {{#if result}}
      <a class="unlikebtn" href="/posts/read-post/{{article._id}}/unlike"><i
          class="bi bi-hand-thumbs-down"
        ></i>
        this post</a>
    {{else}}
      <a class="likebtn" href="/posts/read-post/{{article._id}}/like"><i
          class="bi bi-hand-thumbs-up"
        ></i>
        this story</a>
    {{/if}}
  </div>
</div>
{{#if article.comments}}
  {{#each article.comments}}
    <div class="comment-container">
      <span class="postedby">By {{author}}</span>
      <p>{{description}}</p>
      <p>{{formateDate time}}</p>
      {{#if likes}}
        <a href="/comments/{{_id}}"><p>Likes:
            {{likes.length}}</p></a>
      {{else}}
        <a href="/comments/{{_id}}"><p>Likes: 0</p></a>
      {{/if}}
    </div>
  {{/each}}
{{/if}}
<div class="commentpostcontainer">
  <div class="commentpostformcontainer">
    <form
      class="commentform"
      action="/posts/read-post/{{article._id}}/comment"
      method="post"
    >
      <textarea
        class="commenttextarea"
        name="comment"
        placeholder="Comment post..."
        required
      ></textarea>
      <input class="submitcommentbtn" type="submit" value="Post comment" />
    </form>
  </div>
</div>

