<h2>{{title}}</h2>

<p>{{content}}</p>

 {{#if comments}}
    {{#each comments}}
        <div class="comment-container">
            <p>{{description}}</p>
            <p>{{formateDate time}}</p>
        </div>
    {{/each}}
{{/if}}
<form action="/posts/read-post/{{_id}}/comment" method="post">
    <textarea name="comment" id="" cols="30" rows="10" required></textarea>
    <input type='submit' value="Post comment">
</form>