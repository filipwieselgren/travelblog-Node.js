<a href="/logout">Log out</a>
<h2>{{title}}</h2>

<img class="post-bild" src="{{imgUrl}}" />

 {{#if comments}}
    {{#each comments}}
        <div class="comment-container">
            <p>Posted by {{author}}</p>
            <p>{{description}}</p>
            <p>{{formateDate time}}</p>
            {{#if likes}}
            <a href="/comments/{{_id}}"><p>Likes: {{likes.length}}</p></a>
            {{else}}
            <a href="/comments/{{_id}}"><p>Likes: 0</p></a>
            {{/if}}
        </div>
    {{/each}}
{{/if}}

<p>{{content}}</p>
<form action="/posts/read-post/{{_id}}/comment" method="post">
  <textarea name="comment" id="" cols="30" rows="10" required></textarea>
  <input type="submit" value="Post comment" />
</form>

<a href="/posts/{{_id}}/edit"><button>edit post</button></a>
<a href="/posts/{{_id}}/delete"><button>delete post</button></a>