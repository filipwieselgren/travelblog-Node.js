<a href="/logout">Log out</a>

<h3>Logged in as {{fullName}} {{loginInfo}}</h3>
{{!-- <a href="/profil/{{_id}}"> {{user.username}} {{loginInfo}}</a></h3> --}}

<h2>My travel stories</h2>

<div class="postcontainer">



  {{#each articles}} 

      <article>
        <h3>{{title}}</h3>
        <div class="post-bildcontainer">
          <img class="post-bild" src="{{imgUrl}}" /></div>
        <p class="post-date">{{formateDate time}}</p>
        <p><a href="/posts/read-post/{{_id}}">read post</a></p>
        {{#if comments}}
          {{#each comments}}
            <div class="comment-container">
              <p>Posted by {{author}}</p>
              <p>{{description}}</p>
              <p>{{formateDate time}}</p>
              {{#if likes}}
                <a href="/comments/{{_id}}"><p>Likes: {{likes.length}}</p></a>
              {{else}}
                <a href="/comments/{{_id}}"><p>Likes: 0</p></a>
              {{/if}}
            </div>
          {{/each}}

        {{/if}}

    {{/each}}

</div>