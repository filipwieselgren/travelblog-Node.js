<a href="/logout">Log out</a>
<a href="/posts/new-post">new post</a>

<h3>Logged in as
  <a href="/profil/{{_id}}"> {{fullName}} {{loginInfo}}</a>
</h3>

<h2>All travel stories</h2>
<div class="postcontainer">
  {{#each articles}}

    <article>
      <h3>{{title}}</h3>
      <div class="post-bildcontainer">
        <img class="post-bild" src="{{imgUrl}}" /></div>
      <p class="post-date">{{formateDate time}}</p>
      <p><a href="/posts/read-post/{{_id}}">read post</a></p>
      {{#if comments}}
        {{#each comments}}
          <div class="comment-container">
            <p>Posted by {{author}}</p>
            <p>{{description}}</p>
            <p>{{formateDate time}}</p>
            {{#if likes}}
              <a href="/comments/{{_id}}"><p>Likes: {{likes.length}}</p></a>
            {{else}}
              <a href="/comments/{{_id}}"><p>Likes: 0</p></a>
            {{/if}}
          </div>
        {{/each}}

      {{/if}}
      <form action="/posts/{{_id}}/comment" method="post">
        <textarea name="comment" id="" cols="30" rows="10" required></textarea>
        <input type="submit" value="Post comment" />
      </form>
    </article>
  {{/each}}
</div>